<ul class="task-list">
  {{#each tasks}}
    <div class="box">
      {{#if this.status}}
      <label class="title">{{this.title}}</label> - 
      <label class="teste">{{this.nome}}</label></br>
      <label for="" class="description">{{this.description}}</label>
    {{else}}
      <label class="title status">{{this.title}}</label> - 
      <label class="teste">{{this.nome}}</label></br>
    {{/if}}
    </div>
    <div class="actions">
      <form action="/tasks/updatestatus" method="POST">
        <input type="hidden" name="id" value="{{this.id}}"/>
        <input type="hidden" name="status" value="{{this.status}}">
        <button type="submit">
          <i class="bi bi-check2"></i>
        </button>
      </form>
      <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
      <form action="/tasks/remove" method="POST">
        <input type="hidden" name="id" value="{{this.id}}" />
        <button type="submit">
          <i class="bi bi-x-lg"></i>
        </button>
      </form>
      <button>
          <i class="bi bi-palette-fill"></i>
      </button>
      <button>
        <i class="bi bi-people-fill" type="css"></i>
      </button>
    </div>
  {{/each}}
</ul>