<h1>Todas as Tarefas</h1>
<ul class="task-list">
  {{#each tasks}}
    {{#if this.status}}
      <a href="/" class="title status">{{this.title}}</a>
    {{else}}
      <a href="/" class="title">{{this.title}}</a>
    {{/if}}
    <div class="actions">

      <form action="/tasks/updatestatus" method="POST">
        <input type="hidden" name="id" value="{{this.id}}"/>
        <input type="hidden" name="status" value="{{this.status}}">
        <button type="submit">
          <i class="bi bi-check2"></i>
        </button>
      </form>

      <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
      <form action="/tasks/remove" method="POST">
        <input type="hidden" name="id" value="{{this.id}}" />
        <button type="submit">
          <i class="bi bi-x-lg"></i>
        </button>
      </form>
    </div>
  {{/each}}
</ul>